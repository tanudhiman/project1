

<%= tinymce %>
<div>
<center>
   <h2 class="head"> smartData Enterprises</h2>
</center>
<%= render 'layouts/nav' %>
<%if @project.empty?%>
<h1>
   <center>NO PROJECTS ARE CREATED BY YOU</center>
</h1>
<%else%>
<center>
   <style>
      table ,th,td
      {border: 4px solid grey; padding:5px 5px 5px 5px; width:50%}
   </style>
   <table>
      <thead>
         <tr>
            <th height="50">Name</th>
            <th height="50">Requirement</th>
            <th height="50"> Domain</th>
            <th height="50"> Avatar</th>
            <th height="50"> Final_status</th>
            <th height="50"> Edit | Delete</th>
         </tr>
      </thead>
      <tbody>
         <% @project.each do|project|%>
         <tr>
            <td>
               <%=project.name %>
            </td>
            <td>
               <%=project.requirements.html_safe %>
            </td>
            <td>
               <%=project.domain%>
            </td>
            <td>
               <%= image_tag project.avatar.url(:thumb)%>
            </td>
            <td>
               <%=project.final_status %>
            </td>
            <td>
               <%= button_to  edit_project_path(project), method: :get do %>
               <i class="glyphicon glyphicon-pencil"></i>
               <% end %>
               <%= button_to project, method: :delete  ,  data: { confirm: "Are you sure?" } do %>
               <i class="glyphicon glyphicon-trash"></i>
               <% end %>
            </td>
            <%end%>
      </tbody>
   </table>
   <%= paginate @project %>
</center>
<%end%>
