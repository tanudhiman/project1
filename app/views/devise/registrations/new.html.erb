<%= bootstrap_devise_error_messages! %>

<%= video_tag "Productive-Morning.mp4", controls: false, autoplay: true, muted:
true, loop: true, class: "video-container", type:"video/mp4" %>
<div class="overlay">

  <div class="fh5co-hero-text"> <center>  <h2 class="head"> Shashank Enterprises</h2></center>

    <center>  <h4 class="head2">ONLINE PROJECT MANAGEMENT SYSTEM</h4></center></div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
      <div class="form-group">
        <div class="form-group">
          <%= f.label :name, style: 'color:#000000;' %>
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>
        <%= f.label :email ,style: 'color:#000000;'%>
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password ,style: 'color:#000000;'%>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation ,style: 'color:#000000;'%>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
<div style= 'color:#000000;'>
    <%= f.label :role%>
    <%= f.select(:role, options_for_select(role)) %>

</div>
      <%= f.submit t('.sign_up', default: 'Sign up'), class: 'btn btn-primary',:style=> "width:40%;length:10%;"%>


    <% end %>

  </div>
<p class="a" > <%= render 'devise/shared/links' %></p>

